# Mini-S3 Environment Configuration
# Copy this file to .env and update with your secure values

# Database Configuration
POSTGRES_DB=minis3
POSTGRES_USER=minis3_user
POSTGRES_PASSWORD=your_secure_password_here

# API Configuration
SPRING_PROFILES_ACTIVE=prod
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info

# Storage Configuration
STORAGE_MAX_FILE_SIZE=10485760
STORAGE_ALLOWED_EXTENSIONS=txt,pdf,doc,docx,jpg,jpeg,png,gif,zip,rar,bin

# Security Configuration
# Uncomment and set these for production use
# JWT_SECRET=your_jwt_secret_key_here
# API_KEY=your_api_key_here

# Performance Configuration
SPRING_DATASOURCE_HIKARI_MAXIMUM_POOL_SIZE=20
SPRING_DATASOURCE_HIKARI_MINIMUM_IDLE=10
